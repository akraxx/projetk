{% extends "::base.html.twig" %}

{% block body %}
<button id="confirm-login" type="button" style="display: none;"></button>
<div class="row">
    <div class="col-lg-12">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Se connecter</h3>
                </div>
                <div class="panel-body">
                    <div class="row page-header">
                        <div class="col-lg-6 text-right">
                            <h4>Pas encore de compte?</h4> 
                        </div>
                        <div class="col-lg-6 text-left">
                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">M'enregistrer</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6" style="border-right: 2px #005fb3 solid;">
                            <div class="page-header">
                                <h4>Connexion classique</h4>
                            </div>
                            {% if error %}
                                <div class="text-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
                            {% endif %}
                                <div class="form-group">
                                    <label for="username" class="col-sm-4 control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                                    <div class="col-sm-8">
                                        <input type="text" required="required" name="_username" value="{{ last_username }}" class="form-control" id="username" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="password" class="col-sm-4 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                                    <div class="col-sm-8">
                                        <input type="password" required="required" name="_password" class="form-control" id="password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="remember_me" class="col-sm-4 control-label">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                                    <div class="col-sm-8">
                                        <div class="checkbox">
                                            <input type="checkbox" value="on" name="_remember_me" id="remember_me">
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            </div>
                        <div class="col-lg-6">
                            <div class="page-header">
                                <h4>Connexion via Facebook</h4>
                            </div>
                                
                            <div class="auth-social text-center">
				<a href="#" onclick="fb_login();" class="d-facebookButton">Se connecter avec Facebook</a>
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="col-sm-offset-4 col-sm-2">
                                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary"/>
                                    </div>
                                    </form>
                                    <div class="col-sm-2">
                                        <form action="{{ path('fos_user_resetting_request') }}" method="GET">
                                            <input type="submit" id="_submit" name="_submit" value="Mot de passe oubliÃ©?" class="btn btn-primary"/>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
 </div>               
{% endblock body %}
