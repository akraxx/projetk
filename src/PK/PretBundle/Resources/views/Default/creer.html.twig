{% extends "::base.html.twig" %}

{% block body %}
<form action="{{ path("pk_pret_ajouter") }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Ajouter un pret</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-danger">{{ form_errors(form) }}</div>
                    <div class="form-group">
                        <label for="{{ form.objet.vars.id }}" class="col-sm-4 control-label">Nom de l'objet prété :</label>
                        <div class="col-sm-8">
                            <input type="text" required="required" name="{{ form.objet.vars.full_name }}" class="form-control" id="{{ form.objet.vars.id }}" placeholder="Nom de l'objet">
                        </div>
                    </div>
                    <div class="text-danger">{{ form_errors(form.objet) }}</div>
                    <div class="form-group">
                        <label for="{{ form.emprunteur.vars.id }}" class="col-sm-4 control-label">Nom de l'emprunteur</label>
                        <div class="col-sm-8">
                            <input required="required" name="{{ form.emprunteur.vars.full_name }}" class="form-control" id="{{ form.emprunteur.vars.id }}" placeholder="Nom de l'emprunteur">
                        </div>
                    </div>
                    <div class="text-danger">{{ form_errors(form.emprunteur) }}</div>
                    <div class="form-group">
                        <label for="{{ form.date.vars.id }}" class="col-sm-4 control-label">Date du pret</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.date.date.day, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.date.date.month, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-sm-2">
                            {{ form_widget(form.date.date.year, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div style="display: none;">
                            {{ form_widget(form.date.time.hour, {'attr': {'class': 'form-control'}}) }}
                            {{ form_widget(form.date.time.minute, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="text-danger">{{ form_errors(form.date) }}</div>
                    <input type="hidden" name="{{ form._token.vars.full_name }}" class="form-control" id="{{ form._token.vars.id }}" value="{{ form._token.vars.value }}">
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-sm-offset-4">
                    <input type="submit" value="Ajouter le prêt" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}